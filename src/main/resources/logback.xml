<configuration scan="true" scanPeriod="5 seconds" packagingData="true"> <!-- debug="true" -->
  
  <!-- Send logs to console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n %ex</pattern>
    </encoder>
  </appender>
  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>

  <!-- Send logs to logback-beagle http://logback.qos.ch/beagle/ -->
  <consolePlugin />
</configuration>
